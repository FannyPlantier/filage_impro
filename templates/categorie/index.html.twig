{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Durée</th>
                <th>Nombre de Comédien.nes</th>
                <th>Comédien.nes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.duree }}</td>
                <td>{{ categorie.nbComedien }}</td>
                <td>
                    {% for comedien in categorie.comediens %}
                        {{ comedien.prenom }}
                        {% if not loop.last %},  {% endif %}
                    {% else %}
                        Aucun comédien
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier la catégorie</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}

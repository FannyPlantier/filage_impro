{% extends 'base.html.twig' %}

{% block title %}Spectacle index{% endblock %}

{% block body %}
    <h1>Spectacle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>NbCategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spectacle in spectacles %}
            <tr>
                <td>{{ spectacle.id }}</td>
                <td>{{ spectacle.date ? spectacle.date|date('Y-m-d') : '' }}</td>
                <td>{{ spectacle.nbCategorie }}</td>
                <td>
                    <a href="{{ path('app_spectacle_show', {'id': spectacle.id}) }}">show</a>
                    <a href="{{ path('app_spectacle_edit', {'id': spectacle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_spectacle_new') }}">Create new</a>
{% endblock %}
